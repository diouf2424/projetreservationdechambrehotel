{% extends 'base.html.twig' %}

{% block title %}Chambre{% endblock %}

{% block body %}
    <img src="/images/full-slider-1.jpg" alt="image de represantation de chambre">
    <br>
    <br>
    <h1> Affichage de la Chambre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chambre.id }}</td>
            </tr>
            <tr>
                <th>Typachambre</th>
                <td>{{ chambre.typachambre }}</td>
            </tr>
            <tr>
                <th>Prix par nuit</th>
                <td>{{ chambre.prixparnuit }}</td>
            </tr>
            <tr>
                <th>Nombrelit</th>
                <td>{{ chambre.nombrelit }}</td>
            </tr>
            <tr>
                <th>Typelit</th>
                <td>{{ chambre.typelit }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ chambre.statut ? 'Disponible' : 'Dejat occuper' }}</td>
            </tr>
            <tr>
                <th>Reservation_id</th>
                <td>{{ chambre.typelit }}</td>
            </tr>
        </tbody>
    </table>
    <br>
    <br>
    <a href="{{ path('chambre_index') }}"><input type="button" value="Retour a la liste" /></a>
    <br>
    <br>
    <button class="btn btn-primary"> <a  href="{{ path('reservation_new', {'id': chambre.id}) }}"><p style="color:white;">reserver</p></a>
    </button>
    <br>
    {% if app.user %}
        <a href="{{ path('chambre_edit', {'id': chambre.id}) }}"><input type="button" value="Modifier" /></a>
    {% endif %}
    
    <br>
    <br>
    {{ include('chambre/_delete_form.html.twig') }}
    <br>
    <br>
{% endblock %}
