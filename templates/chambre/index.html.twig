{% extends 'base.html.twig' %}

{% block title %}Chambre index{% endblock %}

{% block body %}
    <br>
    <br>
    <h1> La liste des Chambre disponibles </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Typachambre</th>
                <th>Nombrelit</th>
                <th>Typelit</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.typachambre }}</td>
                <td>{{ chambre.nombrelit }}</td>
                <td>{{ chambre.typelit }}</td>
                <td>{{ chambre.statut ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('chambre_show', {'id': chambre.id}) }}"><input type="button" value="Afficher" /></a>
                    <a href="{{ path('chambre_edit', {'id': chambre.id}) }}"><input type="button" value="Modifier" /></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chambre_new') }}"><input type="button" value="Ajouter une chambre" /></a>
{% endblock %}
