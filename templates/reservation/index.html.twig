{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <img src="{{ asset('images/07.jpg') }}">
    <br>
    <br>
    <h1> la liste des reservations faites</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>prenom</th>
                <th>nom</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Datepaiement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.prenom }}</td>
                <td>{{ reservation.nom }}</td>
                <td>{{ reservation.datedebut ? reservation.datedebut|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.datefin ? reservation.datefin|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.datepaiement ? reservation.datepaiement|date('Y-m-d') : '' }}</td>
                
                <td>
                    <a href="{{ path('reservation_show', {'id': reservation.id}) }}"><input type="button" value="Afficher"/></a>
                    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}"><input type="button" value="Modifier"/></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a href="{{ path('reservation_new') }}"><input type="button" value="Ajouter reservation"/></a>
    <br>
    <br>
{% endblock %}
